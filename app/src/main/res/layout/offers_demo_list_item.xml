<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dim_4"
        android:elevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/dim_4">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dim_8"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/rlBasicHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shadows_light"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sinkinsans600semibold"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:justificationMode="inter_word"
                android:padding="@dimen/dim_6"
                android:text="Zoom Car"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />

            <ImageView
                android:layout_width="@dimen/dim_50"
                android:layout_height="@dimen/dim_50"
                android:padding="@dimen/dim_6"
                android:layout_alignParentEnd="true"
                android:src="@drawable/zoomcar_logo"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlBasicHeader"
            android:layout_marginTop="@dimen/dim_4"
            android:padding="@dimen/dim_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_6"
                android:fontFamily="@font/sinkinsans600semibold"
                android:justificationMode="inter_word"
                android:text="Coupon Code :"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivCopy"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_6"
                android:fontFamily="@font/sinkinsanslight"
                android:justificationMode="inter_word"
                android:text="ALZOOMCASHMYSALARY"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />

            <ImageView
                android:id="@+id/ivCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dim_6"
                android:src="@drawable/ic_content_copy_black_24dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCouponValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlCouponCode"
            android:layout_marginTop="@dimen/dim_4"
            android:padding="@dimen/dim_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_6"
                android:fontFamily="@font/sinkinsans600semibold"
                android:justificationMode="inter_word"
                android:text="Coupon Value :"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_6"
                android:fontFamily="@font/sinkinsanslight"
                android:justificationMode="inter_word"
                android:text="1,400"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlValidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlCouponValue"
            android:layout_marginTop="@dimen/dim_4"
            android:padding="@dimen/dim_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_6"
                android:fontFamily="@font/sinkinsans600semibold"
                android:justificationMode="inter_word"
                android:text="Validity Date :"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dim_6"
                android:fontFamily="@font/sinkinsanslight"
                android:justificationMode="inter_word"
                android:text="#1st July 2020"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />


        </RelativeLayout>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>