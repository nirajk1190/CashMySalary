<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dim_4"
        android:elevation="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/dim_4">



    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dim_8"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imDemo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200"
            android:src="@drawable/demo_img_1"
            android:layout_margin="@dimen/dim_4"/>

        <RelativeLayout
            android:id="@+id/rlHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imDemo"
            android:layout_marginTop="@dimen/dim_4"
            android:padding="@dimen/dim_4">

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dim_8"
                android:fontFamily="@font/sinkinsans600semibold"
                android:maxLines="2"
                android:paddingStart="@dimen/dim_4"
                android:paddingEnd="@dimen/dim_4"
                android:text="@string/did_not_recieve_otp_text"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/universal_text_size12" />

        </RelativeLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlHeading"
            android:layout_marginTop="@dimen/dim_4"
            android:paddingStart="@dimen/dim_8"
            android:fontFamily="@font/sinkinsanslight"
            android:lineSpacingExtra="@dimen/dim_6"
            android:text="- Use CashmySalary exclusive code-CASHMYSALARY25"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size12" />

        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="@dimen/dim_4"
            android:paddingStart="@dimen/dim_8"
            android:fontFamily="@font/sinkinsans600semibold"
            android:lineSpacingExtra="@dimen/dim_6"
            android:text="CASHMYSALARY25"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size12" />

        <TextView
            android:id="@+id/subDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_marginTop="@dimen/dim_4"
            android:paddingStart="@dimen/dim_8"
            android:fontFamily="@font/sinkinsanslight"
            android:lineSpacingExtra="@dimen/dim_6"
            android:text="@string/accept_text"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size12" />

        <TextView
            android:id="@+id/tvValidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subDescription"
            android:layout_marginTop="@dimen/dim_4"
            android:paddingStart="@dimen/dim_8"
            android:fontFamily="@font/sinkinsanslight"
            android:lineSpacingExtra="@dimen/dim_6"
            android:text="@string/accept_text"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/universal_text_size12" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>