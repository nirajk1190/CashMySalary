<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical"
    android:padding="@dimen/dim_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_12"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfile"
            android:layout_width="@dimen/dim_160"
            android:layout_height="@dimen/dim_150"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_80"
                    android:layout_height="@dimen/dim_80"
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/person" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_margin="@dimen/dim_10"
                    android:background="@color/shadows_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dim_4"
                    android:text="@string/home_profile"
                    android:fontFamily="@font/sinkinsanslight"
                    android:textSize="@dimen/universal_text_size12"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvApplyNow"
            android:layout_width="@dimen/dim_160"
            android:layout_height="@dimen/dim_150"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_80"
                    android:layout_height="@dimen/dim_80"
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/apply_now" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_margin="@dimen/dim_10"
                    android:background="@color/shadows_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dim_4"
                    android:text="@string/home_apply_now"
                    android:fontFamily="@font/sinkinsanslight"
                    android:textSize="@dimen/universal_text_size12"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvCredit"
            android:layout_width="@dimen/dim_160"
            android:layout_height="@dimen/dim_150"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_80"
                    android:layout_height="@dimen/dim_80"
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/credit_analysis" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_margin="@dimen/dim_10"
                    android:background="@color/shadows_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dim_4"
                    android:text="@string/home_credit"
                    android:fontFamily="@font/sinkinsanslight"
                    android:textSize="@dimen/universal_text_size12"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPayments"
            android:layout_width="@dimen/dim_160"
            android:layout_height="@dimen/dim_150"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_80"
                    android:layout_height="@dimen/dim_80"
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/pay" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_margin="@dimen/dim_10"
                    android:background="@color/shadows_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dim_4"
                    android:text="@string/home_upcoming_payments"
                    android:fontFamily="@font/sinkinsanslight"
                    android:textSize="@dimen/universal_text_size12"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvStatus"
            android:layout_width="@dimen/dim_160"
            android:layout_height="@dimen/dim_150"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_80"
                    android:layout_height="@dimen/dim_80"
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/track_application" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_margin="@dimen/dim_10"
                    android:background="@color/shadows_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dim_4"
                    android:text="@string/home_check_status"
                    android:fontFamily="@font/sinkinsanslight"
                    android:textSize="@dimen/universal_text_size12"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvOffer"
            android:layout_width="@dimen/dim_160"
            android:layout_height="@dimen/dim_150"
            android:layout_margin="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_80"
                    android:layout_height="@dimen/dim_80"
                    android:padding="10dp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/gift" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_margin="@dimen/dim_10"
                    android:background="@color/shadows_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dim_4"
                    android:text="@string/home_special_offers"
                    android:fontFamily="@font/sinkinsanslight"
                    android:textSize="@dimen/universal_text_size12"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>