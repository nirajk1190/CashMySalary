<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_200"
            android:background="@drawable/gradient_background"
            android:orientation="vertical">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/dim_80"
                android:layout_height="@dimen/dim_80"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_16"
                android:layout_marginBottom="@dimen/dim_16"
                android:src="@drawable/baseline_account_circle_black_48"
                android:tint="@color/white"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/sinkinsanslight"
                    android:layout_centerHorizontal="true"
                    android:text="9954325780"
                    android:textColor="@color/white"
                    android:textSize="@dimen/universal_text_size14" />

                <ImageView
                    android:id="@+id/ivEdit"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/white"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_toEndOf="@+id/textMobile"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dim_12"
            android:layout_marginTop="@dimen/dim_150"
            android:layout_marginEnd="@dimen/dim_12"
            android:elevation="@dimen/dim_0"
            card_view:cardPreventCornerOverlap="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rlProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivIconProfile"
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/edit_profile"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_toEndOf="@+id/ivIconProfile"
                        android:fontFamily="@font/sinkinsanslight"
                        android:gravity="center_vertical"
                        android:justificationMode="inter_word"
                        android:text="@string/profile_edit"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <ImageView
                        android:id="@+id/ivPending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/colorAccent"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_below="@+id/rlProfile"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:background="@color/colorAccent" />

                <RelativeLayout
                    android:id="@+id/rlStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivStatusProfile"
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/track_application"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_toEndOf="@+id/ivStatusProfile"
                        android:fontFamily="@font/sinkinsanslight"
                        android:gravity="center_vertical"
                        android:justificationMode="inter_word"
                        android:text="@string/menu_app_status"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/colorAccent"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_below="@+id/rlStatus"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:background="@color/colorAccent" />


                <RelativeLayout
                    android:id="@+id/rlLoanRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v2"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivLoanRecord"
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/loan_history"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvSLoanRecord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_toEndOf="@+id/ivLoanRecord"
                        android:fontFamily="@font/sinkinsanslight"
                        android:gravity="center_vertical"
                        android:justificationMode="inter_word"
                        android:text="@string/menu_loan"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/colorAccent"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_below="@+id/rlLoanRecord"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:background="@color/colorAccent" />

                <RelativeLayout
                    android:id="@+id/rlNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v3"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivNotification"
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_notifications_none_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_toEndOf="@+id/ivNotification"
                        android:fontFamily="@font/sinkinsanslight"
                        android:gravity="center_vertical"
                        android:justificationMode="inter_word"
                        android:text="@string/menu_notifications"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/colorAccent"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:id="@+id/v4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_below="@+id/rlNotification"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:background="@color/colorAccent" />

                <RelativeLayout
                    android:id="@+id/rlContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v4"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivContactUs"
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/headphones"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvContactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_toEndOf="@+id/ivContactUs"
                        android:fontFamily="@font/sinkinsanslight"
                        android:gravity="center_vertical"
                        android:justificationMode="inter_word"
                        android:text="@string/menu_contactUs"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/colorAccent"
                        android:visibility="visible" />

                </RelativeLayout>

                <View
                    android:id="@+id/v5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:layout_below="@+id/rlContactUs"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_8"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:background="@color/colorAccent" />

                <RelativeLayout
                    android:id="@+id/rlSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v5"
                    android:layout_marginStart="@dimen/dim_8"
                    android:layout_marginTop="@dimen/dim_12"
                    android:layout_marginEnd="@dimen/dim_8"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivSettings"
                        android:layout_width="@dimen/dim_24"
                        android:layout_height="@dimen/dim_24"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_settings_black_24dp"
                        android:tint="@color/colorPrimary"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dim_8"
                        android:layout_toEndOf="@+id/ivSettings"
                        android:fontFamily="@font/sinkinsanslight"
                        android:gravity="center_vertical"
                        android:justificationMode="inter_word"
                        android:text="@string/action_settings"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dim_8"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:tint="@color/colorAccent"
                        android:visibility="visible" />

                </RelativeLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>