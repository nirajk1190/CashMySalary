<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_4"
        android:padding="@dimen/dim_12"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_shape"
            android:padding="@dimen/dim_8"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_personal_info">

        </ImageView>

        <ImageView
            android:id="@+id/ivPending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ivArrow"
            android:layout_marginEnd="@dimen/dim_8"
            android:src="@drawable/ic_error_black_24dp"
            android:visibility="visible"
            android:layout_centerVertical="true">

        </ImageView>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_centerVertical="true">

        </ImageView>



        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_check_circle_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

        </ImageView>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivHeading"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dim_8"
            android:fontFamily="@font/sinkinsanslight"
            android:justificationMode="inter_word"
            android:text="Header"
            android:textColor="@color/black"
            android:textSize="@dimen/universal_text_size12" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>