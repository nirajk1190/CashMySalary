<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/app_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ToolbarColoredBackArrow"
            app:titleTextAppearance="@style/Toolbar.TitleText" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlLoanNumber"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_loan_number"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvLoanNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="LJP12500122"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlLoanAmount"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_loan_amt"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvLoanAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="@string/loan_amount_txt"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlLoanDuration"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_loan_duration"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvLoanDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="90 Days"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlApplicationDate"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_application_date"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvApplicationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="1%"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlInterest"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_interest"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvInterest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="1%"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlProcessingFee"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_processing_fee"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvProcessingFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="1%"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlGST"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_service_charge"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvGST"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="1%"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlDisbursal"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_disburasal_amount"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvDisbursalAmt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="27575"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_0.5"
                    android:background="@color/shadows"/>

                <RelativeLayout
                    android:id="@+id/rlRepayment"
                    android:padding="@dimen/dim_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dim_8"
                    android:visibility="visible">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sinkinsanslight"
                        android:justificationMode="inter_word"
                        android:text="@string/heading_repayment_amount"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                    <TextView
                        android:id="@+id/tvRepayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/sinkinsans600semibold"
                        android:justificationMode="inter_word"
                        android:text="1%"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/universal_text_size12" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlPlanContent"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlRepaymentPlan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/dim_8"
                        android:paddingTop="@dimen/dim_4"
                        android:paddingBottom="@dimen/dim_4"
                        android:background="@color/shadows">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dim_6"
                            android:layout_marginStart="@dimen/dim_10"
                            android:fontFamily="@font/sinkinsanslight"
                            android:justificationMode="inter_word"
                            android:text="@string/heading_repayment_plan"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/universal_text_size12" />


                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dim_12"
                        android:nestedScrollingEnabled="false"
                        android:layout_below="@+id/rlRepaymentPlan"
                        android:orientation="vertical"
                        android:visibility="visible" />
                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>